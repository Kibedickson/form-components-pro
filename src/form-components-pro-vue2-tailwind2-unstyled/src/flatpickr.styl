$calendarBorderColor ?= #6b7280
$dayHoverBackground ?= #f3f4f6
$monthForeground ?= #111827
$weekdaysForeground ?= #6b7280
$dayForeground ?= #374151
$arrow_hover_color ?= #2563eb
$selectedDayBackground ?= #2563eb

@import "~flatpickr/src/style/flatpickr.styl"

.flatpickr-calendar
    border 1px solid #6b7280
    border-radius 0
    box-shadow none
    margin-top 1px

    &:before, &:after
        display none

.flatpickr-wrapper
    width 100%

.flatpickr-current-month
    .flatpickr-monthDropdown-months
    input.cur-year
        font-size 1rem

.flatpickr-time
    input
        &:focus
            box-shadow none