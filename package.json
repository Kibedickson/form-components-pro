{
    "name": "root",
    "private": true,
    "scripts": {
        "lerna": "lerna",
        "build-all": "lerna run build",
        "build-all-dev": "lerna run build:dev",
        "watch": "lerna run --parallel watch",
        "link-all": "lerna run run-link",
        "setup": "yarn && yarn lerna bootstrap && yarn link-all && yarn build-all",
        "setup-dev": "yarn && yarn lerna bootstrap && yarn link-all",
        "test": "lerna run test",
        "prepublishOnly": "lerna run build-all",
        "publish-all": "lerna publish",
        "clean": "find ./src -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find ./src -name 'dist' -type d -prune -exec rm -rf '{}' +",
        "publish-github": "yarn clean && yarn setup && yarn prepublishOnly && yarn publish-all"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-proposal-optional-chaining": "^7.11.0",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@babel/runtime": "^7.11.2",
        "@fullhuman/postcss-purgecss": "^2.1.0",
        "@vue/test-utils": "^1.1.3",
        "lerna": "^3.20.2",
        "tailwindcss": "^2.0.0",
        "typescript": "^3.8.2",
        "vue-template-compiler": "^2.6.11"
    }
}